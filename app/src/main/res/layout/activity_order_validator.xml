<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".orderValidator.OrderValidatorActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/OrvaToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Orderan Hari ini : "
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/OrvaToolbar" />

    <TextView
        android:id="@+id/tvCurrentDateOrderCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20"
        android:layout_marginStart="8dp"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView12"
        app:layout_constraintStart_toEndOf="@+id/textView12"
        app:layout_constraintTop_toTopOf="@+id/textView12" />

    <TextView
        android:id="@+id/tvGotoOrderList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lihat Orderan ....>"
        android:textStyle="italic"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="@+id/textView12"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />





    <Button
        android:id="@+id/btnListOrder"
        style="@style/Widget.Material3.Button.ElevatedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_btn_admin"
        android:text="Order List"
        android:textColor="@color/md_theme_onSecondaryContainer"
        android:textSize="20sp"
        app:backgroundTint="@color/md_theme_secondaryContainer"
        app:layout_constraintTop_toBottomOf="@+id/tvGotoOrderList"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/btnListProduct"
        style="@style/Widget.Material3.Button.ElevatedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/bg_btn_admin"
        android:text="Product List"
        android:layout_marginTop="16dp"
        android:textColor="@color/md_theme_onSecondaryContainer"
        android:textSize="20sp"
        app:backgroundTint="@color/md_theme_secondaryContainer"
        app:layout_constraintTop_toBottomOf="@+id/btnListOrder"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/btnSignOut"
        style="@style/Widget.Material3.Button.ElevatedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_btn_admin"
        android:text="Sign out"
        android:textColor="@color/md_theme_onSecondaryContainer"
        android:textSize="20sp"
        app:backgroundTint="@color/md_theme_secondaryContainer"
        app:layout_constraintTop_toBottomOf="@+id/btnListProduct"
        tools:layout_editor_absoluteX="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>